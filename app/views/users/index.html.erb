<div class="container-fluid px-3 py-3 ">
  <div class="row">
    <div class="col-md-6">
      <h3><%= I18n.t('users.list') %></h3>
    </div>
    <div class="col-md-6 text-right d-flex justify-content-end">
      <%= link_to t('users.import'), import_users_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <hr class='mt-3'/>
  <div class='table-responsive'>
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th><%= I18n.t('users.id') %></th>
          <th><%= I18n.t('users.first_name') %></th>
          <th><%= I18n.t('users.last_name') %></th>
          <th><%= I18n.t('users.email_id') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
